---json
{
  "layout": "chsLayout.liquid",
  "pagination": {
    "data": "tagsplot",
    "size": 1,
    "alias": "tag",
    "addAllPagesToCollections": true
  },
  "permalink": "characters/tag/{{ tag | slug }}/",
  "eleventyComputed": {
    "title": "{{ tag }} Characters",
    "tag": "{{ tag }}",
    "eleventyNavigation": {
      "key": "{{ tag }} Characters",
      "title": "{{ tag }}",
      "parent": "Tags"
    }
  }
}
---
{% assign filteredChs = characters | filterChByTag: tag %}
{% include 'chs', chs: filteredChs %}
