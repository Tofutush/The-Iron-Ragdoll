---
layout: layout.liquid
desc: Archive
permalink: "stories/{{ parent | slug }}/archive/"
eleventyComputed:
  title: "{{ comicTitle }} comic - archive"
  eleventyNavigation:
    title: "Archive"
    parent: "{{ parent }}"
    order: 0
---
<style>
	.archive {
		display: flex;
		flex-wrap: wrap;
		gap: .5em;
		& img {
			height: 6em;
			width: 6em;
			object-fit: cover;
		}
	}
</style>
<h1>{{ comicTitle }} Archive</h1>
{% if multiChapter %}
	{% assign grouped = comicData[dataName] | groupByChapter %}
	{% for group in grouped %}
	<h2>Chapter {{ group.chapter }}</h2>
	<div class="archive">
		{% for page in group.pages %}
		<a href="../page-{{ page.pagenum }}/">
			{% assign path = "comics/" | append: page.url | append: '.png' %}
			{% assign alt = "Page " | append: page.pagenum %}
			{% image path 100 alt %}
		</a>
		{% endfor %}
	</div>
	{% endfor %}
{% else %}
	<div class="archive">
		{% for page in comicData[dataName] %}
			<a href="../page-{{ page.pagenum }}/">
				{% assign path = "comics/" | append: page.url | append: '.png' %}
				{% assign alt = "Page " | append: page.pagenum %}
				{% image path 100 alt %}
			</a>
		{% endfor %}
	</div>
{% endif %}