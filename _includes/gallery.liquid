<div class="gallery">
{% for img in imgs %}
	<div class="img">
		{% if img.author %}
			{% assign path = 'others art/'%}
		{% else %}
			{% assign path = 'gallery/'%}
		{% endif %}
		{% image path img.name img.type 120 img.name '' '' '' true %}
		<div class="modal">
			<div class="close">{% lucide 'x' 48 %}</div>
			<div class="container">
				<button>{% lucide 'chevron-left' 48 'var(--off-white)' %}</button>
				{% image path img.name img.type 1000 img.name %}
				<button>{% lucide 'chevron-right' 48 'var(--off-white)' %}</button>
			</div>
			{% if img.author %}<p>Art by <a href="{{ img.authorUrl }}" target="_blank">{{ img.author }}</a></p>{% endif %}
			{% if img.ch %}
			<div class="tags chbuttons">
				{% for ch in img.ch %}
					{% include 'chButton', ch: ch %}
				{% endfor %}
			</div>
			{% endif %}
			<div class="comment">
				<p class="name-date"><span>{{ img.name }}</span><span>{{ img.date }}</span></p>
				{% if img.comment %}
					{{ img.comment | renderMD }}
				{% endif %}
			</div>
		</div>
	</div>
{% endfor %}
</div>