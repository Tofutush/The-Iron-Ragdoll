<h2 id="characters">Characters</h2>
<div class="three-grid">
    {% for ch in characters %}
        {% assign profile = ch.name | lowerCase | append: ' profile' %}
        {% assign thumb = ch.name | lowerCase | append: ' thumb' %}
        {% assign soul = ch.name | lowerCase | append: ' soul' %}
        <a href="/characters/{{ ch.name | lowerCase }}">{% imageName profile 300 0 '' 'img/gallery/literally empty.png' %}</a>
        <a href="/characters/{{ ch.name | lowerCase }}">{% imageName thumb 300 0 '' 'img/gallery/literally empty.png' %}</a>
        <a href="/characters/{{ ch.name | lowerCase }}">{% imageName soul 300 0 '' 'img/gallery/literally empty.png' %}</a>
    {% endfor %}
</div>
<h3 id="profiles">Profiles</h3>
<div class="pic-grid no-gap">
    {% assign profiles = gallery | filterGalleryByKind: "thumb new" %}
    {% for img in profiles %}
        <a href="/characters/{{ img.ch[0] }}/">{% imageObj img 300 %}</a>
    {% endfor %}
</div>
<h3 id="thumbnails">Thumbnails</h3>
