<h2 id="banners">Banners</h2>
{% assign banners = gallery | filterGalleryByKind: "banner" %}
{% for b in banners %}
    {% assign ch = b.ch[0] %}
    {% if ch %}
        <a href="/characters/{{ ch }}/">{% imageObj b 3000 0 'max' %}</a>
    {% else %}
        {% imageObj b 3000 0 'max' %}
    {% endif %}
{% endfor %}
<h2 id="footers">Footers</h2>
{% assign footers = gallery | filterGalleryByKind: "footer" %}
<div class="pic-grid">
    {% for f in footers %}
        {% imageObj f 500 %}
    {% endfor %}
</div>
