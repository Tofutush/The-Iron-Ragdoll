---
layout: layout.liquid
pagination:
  data: collections.charactersMoreThan10
  size: 1
  alias: ch
  addAllPagesToCollections: true
permalink: "characters/{{ ch.name | lowerCase }}/gallery/"
widepage: true
eleventyComputed:
  title: "{{ ch.name }}'s Gallery"
  desc: "{{ ch.name }}'s gallery."
  banner: "{% if ch.banner %}{{ ch.banner }}{% else %}banner sparky{% endif %}"
  eleventyNavigation:
    title: "Gallery"
    parent: "{{ ch.name }}"
---
<link rel="stylesheet" href="/css/gallery.css"/>
<style>
  .img>img:hover {
    box-shadow: 0 0 0 8px var(--accent);
  }
</style>
<h1>{{ ch.name }}'s Gallery</h1>
{% assign filteredGallery = gallery | filterGallery: ch.name %}
<div style="--accent: {{ ch.color }}">{% include 'gallery' imgs: filteredGallery %}</div>
<script src="/js/gallery.js"></script>