---
layout: chs.liquid
pagination:
  data: tagsplot
  size: 1
  alias: tag
  addAllPagesToCollections: true
permalink: "characters/tag/{{ tag | slug }}/"
noNav: true
eleventyComputed:
  title: "{{ tag }} Characters"
  tag: "{{ tag }}"
---
{% assign filteredChs = characters | filterChByTag: tag %}
<div class="breadcrumbs"><a href="/characters/">Characters</a> {% lucide 'chevron-right' %} <a href="/characters/tag/">Tag</a>{% lucide 'chevron-right' %}<a href="{{ page.url }}">{{ tag }}</a></div>
{% include 'chs', chs: filteredChs %}
{% assign slugged = tag | slug %}
{% if collections[slugged] %}
  <h2>Related files</h2>
  <ul>
    {% for file in collections[slugged] %}
      {% include 'fileLi', file: file %}
    {% endfor %}
  </ul>
{% endif %}