---
layout: storyLayout.liquid
pagination:
  data: collections.storyTags
  size: 1
  alias: tag
  addAllPagesToCollections: true
permalink: "stories/tag/{{ tag | slug }}/"
noNav: true
eleventyComputed:
  title: "{{ tag }} Stories"
  tag: "{{ tag }}"
---
{% assign filteredStories = collections.stories | filterStoriesByTag: tag %}
{% include 'storylist', stories: filteredStories %}