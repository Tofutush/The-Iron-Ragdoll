<h1>Tags</h1>
<ul>
  {% for tag in collections.storyTags %}
    {% assign num = collections.stories | filterStoriesByTag: tag | size %}
    <li><a href="{{ tag | slug }}/">{% lucide 'tags' %} {{ tag }}</a><span class="lighter-text smaller-text"> ({{ num }} {% if num == 1 %}story{% else %}stories{% endif %})</span></li>
  {% endfor %}
</ul>