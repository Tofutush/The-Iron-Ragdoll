<h2 id="banners">Banners</h2>
{% assign banners = gallery | filterGalleryByKind: "banner" %}
{% for b in banners %}
    {% image 'gallery/' b.name 'png' 3000 b.name 'max' %}
{% endfor %}
<h2 id="footers">Footers</h2>
{% assign footers = gallery | filterGalleryByKind: "footer" %}
<div class="pic-grid">
    {% for f in footers %}
        {% image 'gallery/' f.name 'png' 500 f.name %}
    {% endfor %}
</div>
